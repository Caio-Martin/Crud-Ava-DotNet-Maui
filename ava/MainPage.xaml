<ContentPage
    x:Class="ava.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Home">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Border Stroke="Gray" Padding="10" StrokeShape="RoundRectangle 10">
            <Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto, Auto">
                <Image Source="foto_aluno.png" WidthRequest="50" HeightRequest="50" Aspect="AspectFill"
                       BackgroundColor="LightGray" Grid.RowSpan="2" Margin="0,0,10,0" />

                <Label Text="Nome do Aluno" FontSize="18" FontAttributes="Bold" Grid.Column="1" />
                <Label Text="RA: 123456789" FontSize="14" TextColor="Gray" Grid.Row="1" Grid.Column="1" />

                <Image Source="logo.png" WidthRequest="40" HeightRequest="40" Grid.Column="2" Grid.RowSpan="2"/>
            </Grid>
        </Border>


    </VerticalStackLayout>

</ContentPage>
