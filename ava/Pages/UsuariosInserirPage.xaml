<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ava.Pages.UsuariosInserirPage"
             Title="Cadastrar Usuário"
             BackgroundColor="White">

    <StackLayout Padding="20" Spacing="15">
        <Label Text="Cadastro de Usuário" FontSize="Large" HorizontalOptions="Center" />

        <Label Text="Nome do Usuário" />
        <Entry x:Name="entryNome" Placeholder="Digite o nome" />

        <Label Text="Senha" />
        <Entry x:Name="entrySenha" IsPassword="True" Placeholder="Digite a senha" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Margin="0,20,0,0">
            <Button Text="Salvar" Clicked="OnSalvarClicked"/>
            <Button Text="Voltar" Clicked="OnVoltarClicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>

