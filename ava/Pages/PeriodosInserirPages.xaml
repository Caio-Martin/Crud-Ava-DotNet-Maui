<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ava.Pages.PeriodosInserirPages"
             Title="PeriodosInserirPages"
             BackgroundColor="WhiteSmoke">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Cadastro de Período" FontSize="Large" HorizontalOptions="Center" />

            <Label Text="Nome do Período" />
            <Entry x:Name="entryNome" Placeholder="Ex: 1º Semestre 2025" />

            <Label Text="Sigla" />
            <Entry x:Name="entrySigla" Placeholder="Ex: 1S25" />

            <Label Text="Observações" />
            <Editor x:Name="entryObs" Placeholder="Algo relevante (opcional)" AutoSize="TextChanges" />

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Margin="0,20,0,0">
                <Button Text="Salvar" Clicked="OnSalvarClicked" />
                <Button Text="Voltar" Clicked="OnVoltarClicked" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>